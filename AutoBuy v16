----------------------------------------------------------
-- NUMBER FORMAT HELPERS (ADD COMMAS / PARSE COMMAS)
----------------------------------------------------------
local function formatNumber(n: number): string
	n = math.floor(n)
	local s = tostring(n)
	local pos = #s % 3
	if pos == 0 then pos = 3 end
	local prefix = s:sub(1, pos)
	local rest = s:sub(pos + 1)
	if rest ~= "" then
		rest = rest:gsub("(%d%d%d)", ",%1")
	end
	return prefix .. rest
end
 
local function parseNumber(str: string?): number?
	if not str then return nil end
	local cleaned = str:gsub("[^%d]", "") -- remove commas and any non-digits
	if cleaned == "" then return nil end
	return tonumber(cleaned)
end
 
local function trim(s: string): string
	return (s:gsub("^%s+", ""):gsub("%s+$", ""))
end
 
