local shoeSearchBox = Instance.new("TextBox")
shoeSearchBox.Size = UDim2.new(1, -20, 0, 24)
shoeSearchBox.Position = UDim2.new(0, 10, 0, 150)
shoeSearchBox.BackgroundColor3 = Color3.fromRGB(50,50,50)
