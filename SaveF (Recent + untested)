local shoeMaxPrices={}for _,s in ipairs(presetSneakers)do shoeMaxPrices[s.full]=s.default end

-- For new shoes/price update:
local function updateOrAddSneaker(newShoe)
    for _,shoe in ipairs(presetSneakers) do
        if shoe.full == newShoe.full then
            shoe.default = newShoe.default
            shoe.label = newShoe.label
            return
        end
    end
    table.insert(presetSneakers, newShoe)
end
