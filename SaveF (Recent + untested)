-- PURCHASE LOG HISTORY TAB

-- Log tab (use "Span=2" for extra width if supported)
local logTab = Tabs.Log:AddGroupbox("Purchase Log History", {Span = 2})
local logListLabel = logTab:AddLabel("")

-- Utility to refresh log view
local function refreshLogViews()
    local lines = {}
    for i,entry in ipairs(purchaseLog) do
        table.insert(lines,
            string.format("[B] %s @ $%s [%s]",
                entry.name or "?", formatNumber(entry.price), entry.timestamp or "??")
        )
        if i >= 150 then break end -- only show latest 150
    end
    if #lines == 0 then lines[1] = "Nothing yet!" end
    logListLabel:SetText(table.concat(lines, "\n"))
end

-- Log auto-refresh
task.spawn(function()
    while true do
        refreshLogViews()
        task.wait(0.5)
    end
end)
--[[=====================================================================================
BLOCK 4/6:
- VISUAL/BEEPER FEEDBACK: SOUND/FLASH FOR RARE (IN MODAL)
- GP6 TAB: QUICK ONE-TAP SELLER & PROFIT LOGIC
- UI POLISH/KEYBINDS
